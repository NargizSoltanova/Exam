
@{
    ViewData["Title"] = "Edit";
}

@model Portfolio

<div class="card">
    <div class="card-body">
        <form class="forms-sample" asp-action="Edit" asp-controller="Portfolies" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="File"></label>
                <input class="form-control" asp-for="File" placeholder="File">
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <button type="submit" class="btn btn-primary me-2">Submit</button>
            <button class="btn btn-light" asp-action="Index" asp-controller="Portfolies">Cancel</button>
        </form>
    </div>
</div>