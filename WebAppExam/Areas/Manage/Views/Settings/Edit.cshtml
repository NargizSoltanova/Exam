
@{
    ViewData["Title"] = "Edit";
}

@model Setting

<div class="card">
    <div class="card-body">
        <form class="forms-sample" asp-action="Edit" asp-controller="Settings">
            <div class="form-group">
                <label asp-for="Key"></label>
                <input type="text" class="form-control" asp-for="Key" placeholder="Key">
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value"></label>
                <input type="text" class="form-control" asp-for="Value" placeholder="Value">
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <button type="submit" class="btn btn-primary me-2">Submit</button>
            <button class="btn btn-light" asp-action="Index">Cancel</button>
        </form>
    </div>
</div>
